<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AFRICANSHIPPINGAPP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AFRICANSHIPPINGAPP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AFRICANSHIPPINGAPP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AFRICANSHIPPINGAPP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textview_style">
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">#024B85</item>
    </style>
    <style name="bg_style">
        <item name="android:background">#e2f8fb</item>
    </style>
    <style name="card_color">
        <item name="android:background">@color/white</item>
    </style>
</resources>